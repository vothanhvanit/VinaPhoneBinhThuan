<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <TextView
        android:id="@+id/tv_stt"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/mau_do"
        android:textSize="30sp"
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:textSize="18sp"
            android:textColor="@color/xanh_muc"
            android:text="Võ Thành Văn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mobile"
            android:textSize="18sp"
            android:textColor="@color/mau_do"
            android:text="0916487007"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_nhom_thoi_luong"
            android:textSize="15sp"
            android:text="Trên 500Mb"
            android:textColor="@color/mau_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_nghe_nghiep"
            android:textSize="15sp"
            android:textColor="@color/xanh_muc"
            android:text="Nghề nghiệp : Nông dân"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_nam_sinh"
            android:textSize="15sp"
            android:textColor="@color/xanh_muc"
            android:text="SN : 1983"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_diachi"
            android:textSize="15sp"
            android:textColor="@color/xanh_muc"
            android:text="Đia chỉ: Khu phố 1, Phường Phú tài, TP. Phan Thiết, Bình Thuận"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>